<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4468A6"
    tools:context="org.msuffo.pregunta3.activities.QuestionActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/labelPregunta"
        app:layout_constraintTop_toTopOf=   "parent">


        <ImageView
            android:id="@+id/ivCategoria"
            android:layout_width= "120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toTopOf="@+id/labelCategoria"
            app:layout_constraintTop_toTopOf=   "parent" />

        <TextView
            android:id="@+id/labelCategoria"
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/ivCategoria"/>
    </LinearLayout>

    <TextView
        android:id="@+id/labelPregunta"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd=  "15dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf= "@+id/linearLayout"
        app:layout_constraintEnd_toEndOf=    "parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf= "@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width= "0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf=      "parent"
        app:layout_constraintStart_toStartOf=  "parent"
        app:layout_constraintTop_toBottomOf=   "@+id/labelPregunta"
        app:layout_constraintHorizontal_bias="0.615">

        <Button
            android:id="@+id/bPrimerRespuesta"
            android:layout_width= "match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_marginStart= "30dp"
            android:layout_marginEnd=   "30dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:onClick="comprobar"/>

        <Button
            android:id="@+id/bSegundaRespuesta"
            android:layout_width= "match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_marginStart= "30dp"
            android:layout_marginEnd=   "30dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:onClick="comprobar"/>

        <Button
            android:id="@+id/bTercerRespuesta"
            android:layout_width= "match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_marginStart= "30dp"
            android:layout_marginEnd=   "30dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:onClick="comprobar"/>

        <Button
            android:id="@+id/bCuartaRespuesta"
            android:layout_width= "match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_marginStart= "30dp"
            android:layout_marginEnd=   "30dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:onClick="comprobar"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>